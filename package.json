{
  "name": "xud-ui",
  "description": "For market makers who want to have a visual way to control their xud environment",
  "author": "Exchange Union",
  "build": {
    "appId": "com.xud-ui",
    "linux": {
      "category": "Finance",
      "icon": "public/assets/512x512.png"
    },
    "mac": {
      "category": "public.app-category.finance",
      "icon": "public/assets/512x512.png"
    },
    "win": {
      "icon": "public/assets/512x512.png"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "version": "1.2.0-test.9",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "mobx": "^5.15.7",
    "mobx-react": "^6.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "rxjs": "^6.6.3"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn lint && yarn react-build && yarn electron-build --publish never",
    "build-all": "yarn lint && yarn react-build && yarn electron-build --publish never -mwl",
    "build-wl": "yarn lint && yarn react-build && yarn electron-build --publish never --win --linux",
    "start": "concurrently --kill-others \"cross-env BROWSER=none yarn react-start\" \"wait-on https://localhost:3000 && electron .\"",
    "test": "prettier --check src/ && yarn react-test",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "prettier": "prettier --write src/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.62",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "concurrently": "^5.3.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "eslint-plugin-jest": "^24.0.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0",
    "typescript": "^3.7.5",
    "wait-on": "^5.2.0"
  },
  "engines": {
    "node": ">=12.18.0"
  }
}
